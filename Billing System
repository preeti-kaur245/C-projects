    printf("Coffe                            %d                             %d\n",coffee,c);
    printf("Rice                             %d                             %d\n",rice,r);
    printf("Wheat                            %d                             %d\n",wheat,w);
    printf("Pepsi                            %d                             %d\n",pepsi,pep);
    printf("Sprite                           %d                             %d\n",sprite,spr);
    printf("Coke                             %d                             %d\n",coke,cok);
