    printf("%d RS\n",s);
    printf("Tea :");
    printf("%d RS\n",t);
    printf("Coffee :");
    printf("%d RS\n",c);
    printf("Rice :");
    printf("%d RS\n",r);
    printf("Wheat :");
    printf("%d RS\n",w);
    printf("TOTAL GROCERY PRICE :");
