    printf("Sprite :");
    printf("%d RS\n",spr);
    printf("Coke :");
    printf("%d RS\n",cok);
    printf("Mojitos :");
    printf("%d RS\n", moj);
    printf("Thumbs UP :");
    printf("%d RS\n",thu);
    printf("TOTAL BEVERAGE PRICE :");
    printf("%d RS\n", beverage_total);
    
    printf("...................\n");
