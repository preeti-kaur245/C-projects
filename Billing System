    scanf("%d",&body_soap);
    printf("Hair Cream (RS 25): ");
    scanf("%d",&hair_cream);
    printf("Body Spray (RS 50): ");
    scanf("%d",&body_spray);
    printf("Hair Spray (RS 50)");
    scanf("%d",&hair_spray);

